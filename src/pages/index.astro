---
import PlayListItemCard from '../components/PlayListItemCard.astro';
import Greeting from '../components/Greeting.svelte';
import Layout from '../layouts/Layout.astro';
import { playlists } from '../lib/data';
import SongsArray from '../components/SongsListItemCard';
---

<Layout title="Spotify Clone">
  <div
    id="playlist-container"
    class="relative transition-all duration-1000 bg-red-900"
  >
    <div class="relative z-10 px-6 pt-10">
      <Greeting />
      <SongsArray client:load />
      <div
      class="absolute inset-0 bg-linear-to-t from-zinc-900 via-zinc-900/80 -z-1"
      >
    </div>
    <div class="flex flex-wrap mt-6 gap-4">
      <h1 class="text-4xl font-bold text-white w-full">Albums</h1>
      {playlists.map((playlist) => <PlayListItemCard playlist={playlist} />)}
    </div>
    </div>
  </div>
</Layout>
