---
export const prerender = false;

import MusicsTable from '../../components/MusicTable.tsx';
import CardPlayButton from '../../components/CardPlayButton.jsx';
import Layout from '../../layouts/Layout.astro';
import { allPlaylists, songs } from '../../lib/data';

const { id } = Astro.params;

const playlist = allPlaylists.find((playlist) => playlist.id === id);
const playlistSongs = songs.filter(
  (song) => song.albumId === playlist?.albumId
);
---

<Layout title="Spotify Clone">
  <div
    id="playlist-container"
    class=`relative flex flex-col h-full overflow-x-hidden`
    style={`background-color: ${playlist?.color.dark}`}
    transition:name=`playlist ${id} box`
  >
    <!-- <PageHeader /> -->

    <header class="flex flex-row gap-8 px-6 mt-15">
      <picture class="aspect-square w-52 h-52 flex-none">
        <img
          src={playlist?.cover}
          alt={playlist?.title}
          transition:name=`playlist ${playlist?.id} image`
          class="h-full w-full object-cover shadow-lg"
        />
      </picture>
      <div class="flex flex-col justify-between">
        <h2 class="flex flex-1 items-end">Playlist</h2>
        <div>
          <h1 class="text-5xl font-bold block text-white">
            <span transition:name=`playlist ${playlist?.id} title`>
              {playlist?.title}
            </span>
          </h1>
        </div>

        <div class="flex-1 flex items-end">
          <div class="text-sm text-gray-300 font-normal">
            <div transition:name=`playlist ${playlist?.id} artists`>
              <span>{playlist?.artists.join(', ')}</span>
            </div>
            <p class="mt-1">
              <span class="text-white">{playlistSongs.length}</span> songs
            </p>
          </div>
        </div>
      </div>
    </header>
    <main class="mt-6 backdrop-blur-md h-full bg-zinc-800/30">
      <div class="pl-6 pt-6">
        <CardPlayButton id={id} song={""} size="large" client:visible />
      </div>
      <div class="relative z-10 px-6 pt-10"></div>
      <div
        class="absolute inset-0 bg-linear-to-t from-zinc-900 via-zinc-900 -z-10"
      >
      </div>

      <section class="">
        <MusicsTable songs={playlistSongs} songId={undefined} client:load />
      </section>
    </main>
  </div>
</Layout>
